<% @title = "Vos recherches" %>
<div class="container">
  <h1>Vos recherches : </h1>
  <%  @searches.each do |search| %>
  <div class="product">
    <div class='product-upvote'>

      <div class='product-count'><%= search.results.size %></div>
    </div>
    <img src="http://placehold.it/350x150" alt="kudoz" class="product-image hidden-xs">
    <div class='product-body'>
      <h3><%= search.address %></h3>
      <span><%= search.type.name %></span>
      <div>Rayon : <%= search.radius %></div>
      <div>Budget Max : <%= search.budget %> Euros</div>
      <div>Surface : <%= search.surface_min %></div>
      <div>Nb. Pi√®ces Min : <%= search.room_min %></div>
    </div>
    <ul class="list-inline product-controls hidden-sm hidden-xs">
      <li>
        <%= link_to "", search_path(search), method: :delete, data: {confirm: "You sure?"}, class: "fa fa-trash-o" %>
      </li>
    </ul>
    <%= link_to "", search, class: "show-link" %>
  </div>
  <% end %>
</div>
<% content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
