<div class="banner" style="background-image: /*linear-gradient(0deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),*/ url(<%= image_url 'wagon.jpg' %>);">
  <div class="log-btns">
    <% if user_signed_in? %>
     <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Signup"), new_user_registration_path, class: "btn btn-warning" %> &nbsp
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
  <div class="banner-content">
    <div class="banner-title">
      <h1>Happynvestor</h1>
        <%= simple_form_for(@search) do |f| %>
          <%= f.input :address, placeholder: "Address here plz", label: false %>
          <%= f.input :radius, collection: %w(5 10 15 20 15 30 35 40 45 50), default: 5, label: false %>
          <%= f.input :type_id, collection: @types, default: @types.first, label: false %> <!-- eventuellement faire un select sur le type -->
          <%= f.input :budget, placeholder: "Budget here", label: false %>
          <%= f.input :surface_min, placeholder: "Surface_min here", label: false %>
          <%= f.input :room_min, placeholder: "Room_min here", label: false %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>

 <!-- :collection => :radius, :label_method => :radius, -->
